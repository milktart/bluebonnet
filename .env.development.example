# Development Environment Configuration
# Copy this file to .env (or .env.development) and fill in the values

# Server Configuration
NODE_ENV=development
PORT=3001

# Session Configuration
SESSION_SECRET=dev-secret-not-for-production

# Database Configuration
DB_HOST=dev_postgres
DB_PORT=5432
DB_NAME=dev_travel_planner
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=dev_redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=debug

# Session Settings
SESSION_MAX_AGE=86400000

# API Keys (Optional - for external services)
AVIATION_STACK_API_KEY=
GEOCODING_API_KEY=

# Client URL (for CORS if needed)
CLIENT_URL=http://localhost:3001

# WebSocket CORS Origin
CORS_ORIGIN=http://localhost:3001

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
