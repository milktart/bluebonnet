<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/core.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link href="https://unpkg.com/tailwindcss@^2.0/dist/tailwind.min.css" rel="stylesheet">
  <link href="/css/trips.css" rel="stylesheet">
  <script src="https://cdn.socket.io/4.7.2/socket.io.min.js" crossorigin="anonymous"></script>
</head>
<body class="overflow-hidden">
<script>
  window.currentUserName = '<%= user ? (user.firstName + " " + user.lastName) : "You" %>';
  window.openSecondarySidebar = function() {
    const sidebar = document.getElementById('secondary-sidebar');
    if (sidebar) sidebar.classList.add('open');
  };
  window.closeSecondarySidebar = function() {
    const sidebar = document.getElementById('secondary-sidebar');
    if (sidebar) sidebar.classList.remove('open');
  };
</script>

  <div id="tripMap"></div>

  <div id="tertiary-sidebar" class="tertiary-sidebar sidebar">
    <div class="p-6">
      <div id="tertiary-sidebar-content"></div>
    </div>
  </div>

  <div id="secondary-sidebar" class="secondary-sidebar sidebar">
    <div class="p-6">
      <div id="secondary-sidebar-content"></div>
    </div>
  </div>

  <div class="primary-sidebar sidebar">
    <div class="sidebar-header p-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center space-x-3">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
            </svg>
          </div>
          <h1 class="text-xl font-bold text-gray-900">My Trips</h1>
        </div>
      </div>

      <%- include('../partials/flash') %>

      <div class="border-b border-gray-200 -mx-6">
        <nav class="-mb-px flex justify-between px-6">
          <div class="flex">
            <button id="upcoming-tab" class="py-3 px-4 border-b-2 border-blue-500 font-medium text-sm text-blue-600 bg-blue-50 rounded-t-lg transition-all duration-200" data-action="showUpcomingTrips" data-update-history="true">
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>Upcoming</span>
              </div>
            </button>
            <button id="past-tab" class="py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:bg-gray-50 hover:border-gray-300 rounded-t-lg transition-all duration-200" data-action="showPastTrips" data-update-history="true">
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span>Past</span>
              </div>
            </button>
          </div>
          <button id="settings-tab" class="py-3 px-4 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:bg-gray-50 hover:border-gray-300 rounded-t-lg transition-all duration-200" data-action="showSettings" data-update-history="true">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </button>
        </nav>
      </div>
    </div>

    <div class="sidebar-content">
      <% if (trips.length === 0) { %>
        <div id="upcoming-content" class="space-y-4 p-6">
          <div class="text-center py-12 px-6">
            <h3 class="text-lg font-medium text-gray-900 mb-2">No trips yet</h3>
            <p class="text-gray-500">Get started by creating your first trip</p>
          </div>
        </div>
        <div id="past-content" class="space-y-4 p-6 hidden">
          <p class="text-gray-500">No past trips to display.</p>
        </div>
      <% } else { %>

      <%- include('../partials/dashboard-sidebar-content') %>

      <% } %>

      <div id="settings-content" class="space-y-4 p-6 hidden">
        <button data-action="loadSidebarContent" data-url="/account/sidebar" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 bg-white">
          <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div class="flex-1 text-left">
            <h3 class="text-sm font-medium text-gray-900">Account Settings</h3>
          </div>
        </button>
        <a href="/auth/logout" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-red-200 hover:border-red-300 hover:bg-red-100 bg-red-50">
          <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
          </div>
          <div class="flex-1 text-left">
            <h3 class="text-sm font-medium text-red-600">Sign Out</h3>
          </div>
        </a>
      </div>
    </div>
  </div>

  <script>
    // Load trip items via AJAX when accordion is expanded
    window.loadTripItemsIfNeeded = async function(accordionId) {
      const accordionContent = document.getElementById(accordionId);
      if (!accordionContent) return;
      const tripId = accordionContent.getAttribute('data-trip-id');
      if (!tripId) return;
      if (accordionContent.getAttribute('data-loaded') === 'true') return;
      try {
        const response = await fetch(`/trips/${tripId}/sidebar`);
        if (!response.ok) throw new Error(`Status: ${response.status}`);
        const html = await response.text();
        accordionContent.innerHTML = html;
        accordionContent.setAttribute('data-loaded', 'true');
      } catch (error) {
        console.error('Error loading trip items:', error);
        accordionContent.innerHTML = '<div class="p-4 text-red-600 text-sm">Error loading trip details</div>';
      }
    };

    // Initialize global data structures
    window.globalMarkerAssignments = <%- JSON.stringify(globalMarkerMap || {}) %>;
    window.allTripsData = { flights: [], hotels: [], transportation: [], carRentals: [], events: [] };
    window.upcomingTripsData = { flights: [], hotels: [], transportation: [], carRentals: [], events: [] };
    window.pastTripsData = { flights: [], hotels: [], transportation: [], carRentals: [], events: [] };

    // Add standalone flights to data
    <% if (standaloneFlights && standaloneFlights.length > 0) { %>
      const standaloneFlightsData = <%- JSON.stringify(standaloneFlights) %>;
      window.allTripsData.flights.push(...standaloneFlightsData);
      window.upcomingTripsData.flights.push(...standaloneFlightsData);
    <% } %>

    // Add standalone hotels to data
    <% if (standaloneHotels && standaloneHotels.length > 0) { %>
      const standaloneHotelsData = <%- JSON.stringify(standaloneHotels) %>;
      window.allTripsData.hotels.push(...standaloneHotelsData);
      window.upcomingTripsData.hotels.push(...standaloneHotelsData);
    <% } %>

    // Add standalone transportation to data
    <% if (standaloneTransportation && standaloneTransportation.length > 0) { %>
      const standaloneTransportationData = <%- JSON.stringify(standaloneTransportation) %>;
      window.allTripsData.transportation.push(...standaloneTransportationData);
      window.upcomingTripsData.transportation.push(...standaloneTransportationData);
    <% } %>

    // Add standalone car rentals to data
    <% if (standaloneCarRentals && standaloneCarRentals.length > 0) { %>
      const standaloneCarRentalsData = <%- JSON.stringify(standaloneCarRentals) %>;
      window.allTripsData.carRentals.push(...standaloneCarRentalsData);
      window.upcomingTripsData.carRentals.push(...standaloneCarRentalsData);
    <% } %>

    // Add standalone events to data
    <% if (standaloneEvents && standaloneEvents.length > 0) { %>
      const standaloneEventsData = <%- JSON.stringify(standaloneEvents) %>;
      window.allTripsData.events.push(...standaloneEventsData);
      window.upcomingTripsData.events.push(...standaloneEventsData);
    <% } %>

    // Add past standalone flights to data
    <% if (pastStandaloneFlights && pastStandaloneFlights.length > 0) { %>
      const pastStandaloneFlightsData = <%- JSON.stringify(pastStandaloneFlights) %>;
      window.allTripsData.flights.push(...pastStandaloneFlightsData);
      window.pastTripsData.flights.push(...pastStandaloneFlightsData);
    <% } %>

    // Add trip flights to data (only upcoming trips - trip.returnDate >= today)
    <% trips.forEach(trip => { %>
      <% if (trip.flights && trip.flights.length > 0) { %>
        const tripFlights_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.flights) %>;
        window.allTripsData.flights.push(...tripFlights_<%= trip.id.replace(/-/g, '_') %>);
        window.upcomingTripsData.flights.push(...tripFlights_<%= trip.id.replace(/-/g, '_') %>);
      <% } %>
      <% if (trip.hotels && trip.hotels.length > 0) { %>
        const tripHotels_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.hotels) %>;
        window.allTripsData.hotels.push(...tripHotels_<%= trip.id.replace(/-/g, '_') %>);
        window.upcomingTripsData.hotels.push(...tripHotels_<%= trip.id.replace(/-/g, '_') %>);
      <% } %>
      <% if (trip.transportation && trip.transportation.length > 0) { %>
        const tripTrans_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.transportation) %>;
        window.allTripsData.transportation.push(...tripTrans_<%= trip.id.replace(/-/g, '_') %>);
        window.upcomingTripsData.transportation.push(...tripTrans_<%= trip.id.replace(/-/g, '_') %>);
      <% } %>
      <% if (trip.events && trip.events.length > 0) { %>
        const tripEvents_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.events) %>;
        window.allTripsData.events.push(...tripEvents_<%= trip.id.replace(/-/g, '_') %>);
        window.upcomingTripsData.events.push(...tripEvents_<%= trip.id.replace(/-/g, '_') %>);
      <% } %>
    <% }) %>

    // Add past trip data to pastTripsData only (trip.returnDate < today)
    <% if (pastTrips && pastTrips.length > 0) { %>
      <% pastTrips.forEach(trip => { %>
        <% if (trip.flights && trip.flights.length > 0) { %>
          const pastTripFlights_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.flights) %>;
          window.allTripsData.flights.push(...pastTripFlights_<%= trip.id.replace(/-/g, '_') %>);
          window.pastTripsData.flights.push(...pastTripFlights_<%= trip.id.replace(/-/g, '_') %>);
        <% } %>
        <% if (trip.hotels && trip.hotels.length > 0) { %>
          const pastTripHotels_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.hotels) %>;
          window.allTripsData.hotels.push(...pastTripHotels_<%= trip.id.replace(/-/g, '_') %>);
          window.pastTripsData.hotels.push(...pastTripHotels_<%= trip.id.replace(/-/g, '_') %>);
        <% } %>
        <% if (trip.transportation && trip.transportation.length > 0) { %>
          const pastTripTrans_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.transportation) %>;
          window.allTripsData.transportation.push(...pastTripTrans_<%= trip.id.replace(/-/g, '_') %>);
          window.pastTripsData.transportation.push(...pastTripTrans_<%= trip.id.replace(/-/g, '_') %>);
        <% } %>
        <% if (trip.events && trip.events.length > 0) { %>
          const pastTripEvents_<%= trip.id.replace(/-/g, '_') %> = <%- JSON.stringify(trip.events) %>;
          window.allTripsData.events.push(...pastTripEvents_<%= trip.id.replace(/-/g, '_') %>);
          window.pastTripsData.events.push(...pastTripEvents_<%= trip.id.replace(/-/g, '_') %>);
        <% } %>
      <% }) %>
    <% } %>

    // DEBUG LOGGING - Remove this after debugging
    console.log('=== DASHBOARD DATA INITIALIZATION ===');
    console.log('trips (from controller - should be upcoming only):', <%- JSON.stringify(trips.length) %>);
    console.log('pastTrips (from controller - should be past only):', <%- JSON.stringify(pastTrips.length) %>);
    console.log('upcomingTripsData:', window.upcomingTripsData);
    console.log('pastTripsData:', window.pastTripsData);

    // Log individual trip data
    console.log('=== UPCOMING TRIPS FROM CONTROLLER ===');
    <% trips.forEach((trip, idx) => { %>
      console.log(`Trip ${idx}: ${trip.name} (ID: ${trip.id}) - flights: ${trip.flights ? trip.flights.length : 0}, returnDate: ${trip.returnDate}`);
    <% }); %>

    console.log('=== PAST TRIPS FROM CONTROLLER ===');
    <% pastTrips.forEach((trip, idx) => { %>
      console.log(`PastTrip ${idx}: ${trip.name} (ID: ${trip.id}) - flights: ${trip.flights ? trip.flights.length : 0}, returnDate: ${trip.returnDate}`);
    <% }); %>

    console.log('=== FINAL DATA SUMMARY ===');
    console.log('upcomingTripsData.flights count:', window.upcomingTripsData.flights.length);
    console.log('pastTripsData.flights count:', window.pastTripsData.flights.length);
    console.log('allTripsData.flights count:', window.allTripsData.flights.length);

  </script>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    window.MAP_TILE_URL = '<%- mapTileUrl %>';
  </script>
  <script type="module" src="<%= getBundle('common') %>"></script>
  <script type="module" src="<%= getBundle('dashboard') %>"></script>

</body>
</html>
