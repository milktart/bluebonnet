<script>
  // Set current user's full name
  window.currentUserName = '<%= user ? (user.firstName + " " + user.lastName) : "You" %>';

  // Define critical functions immediately in head to avoid ReferenceError
  // These must be defined BEFORE any HTML elements reference them
  window.openSecondarySidebar = function() {
    const sidebar = document.getElementById('secondary-sidebar');
    if (sidebar) {
      sidebar.classList.add('open');
    }
  };

  window.closeSecondarySidebar = function() {
    const sidebar = document.getElementById('secondary-sidebar');
    if (sidebar) {
      sidebar.classList.remove('open');
    }
  };

  window.showCreateTripForm = function() {
    const content = document.getElementById('secondary-sidebar-content');
    const form = document.getElementById('create-trip-form');
    if (content && form) {
      content.innerHTML = '';
      form.style.display = 'none';
      const formContent = form.innerHTML;
      content.innerHTML = formContent;
      const formElement = content.querySelector('form');
      if (formElement) {
        formElement.reset();
      }
      window.openSecondarySidebar();

      // Add trip owner as initial companion
      const companionsContainer = content.querySelector('#tripCompanions');
      const companionsJson = content.querySelector('#tripCompanionsJson');
      const userName = window.currentUserName || 'You';
      const ownerCompanionEl = document.createElement('div');
      ownerCompanionEl.className = 'inline-flex items-center gap-2 bg-blue-100 text-blue-900 px-3 py-2 rounded-lg text-sm mr-2 mb-2';
      ownerCompanionEl.innerHTML = `
        <span>${userName}</span>
        <button type="button" class="text-blue-900 hover:text-blue-700 font-bold ml-1 focus:outline-none" data-action="removeCompanionFromTrip" data-companion-id="owner" style="font-size: 1.2em; line-height: 1;">
          ×
        </button>
      `;
      companionsContainer.appendChild(ownerCompanionEl);

      // Initialize trip date sync after form is loaded
      const departureDateInput = content.querySelector('input[name="departureDate"]');
      const returnDateInput = content.querySelector('input[name="returnDate"]');

      if (departureDateInput && returnDateInput) {
        departureDateInput.addEventListener('change', function() {
          const departureDate = this.value;
          const returnDate = returnDateInput.value;

          // Case 1: Return date is blank - auto-fill with departure date
          if (!returnDate) {
            returnDateInput.value = departureDate;
          }
          // Case 2: Departure date is after return date - update return date to match departure date
          else if (departureDate > returnDate) {
            returnDateInput.value = departureDate;
          }
          // Case 3: Departure date is before return date - leave return date unchanged
        });
      }

      // Initialize companion search functionality
      initializeTripCompanionSearch(content);
    }
  };

  // Initialize trip companion search
  function initializeTripCompanionSearch(formContainer) {
    const searchInput = formContainer.querySelector('#tripCompanionSearch');
    const searchResults = formContainer.querySelector('#tripCompanionSearchResults');
    const companionsContainer = formContainer.querySelector('#tripCompanions');
    const companionsJson = formContainer.querySelector('#tripCompanionsJson');

    let selectedCompanions = [];

    console.log('initializeTripCompanionSearch called', { searchInput, searchResults, companionsContainer, companionsJson });

    if (!searchInput) {
      console.log('searchInput not found - companion search will not be initialized');
      return;
    }

    // Handle search input
    searchInput.addEventListener('input', async function(e) {
      const query = this.value.trim().toLowerCase();
      console.log('Trip companion search input event', { query, queryLength: query.length });

      if (query.length < 2) {
        console.log('Query too short, hiding results');
        searchResults.classList.add('hidden');
        return;
      }

      console.log('Fetching companions for query:', query);
      try {
        const response = await fetch(`/companions/api/search?q=${encodeURIComponent(query)}`);
        console.log('Fetch response status:', response.status);
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        const data = await response.json();

        // Handle both array and object responses
        const companions = Array.isArray(data) ? data : (data.companions || []);
        const results = companions.filter(c => !selectedCompanions.find(sc => sc.id === c.id));

        if (results.length > 0) {
          searchResults.innerHTML = results.map(companion => `
            <div class="px-4 py-2 hover:bg-gray-100 cursor-pointer text-sm" data-action="addCompanionToTrip" data-companion-id="${companion.id}" data-companion-name="${companion.name}">
              <div class="font-medium text-gray-900">${companion.name}</div>
              <div class="text-xs text-gray-500">${companion.email}</div>
            </div>
          `).join('');
          searchResults.classList.remove('hidden');
        } else {
          searchResults.innerHTML = '<div class="px-4 py-2 text-sm text-gray-500">No companions found</div>';
          searchResults.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Error searching companions:', error);
        searchResults.innerHTML = '<div class="px-4 py-2 text-sm text-red-500">Error searching companions</div>';
        searchResults.classList.remove('hidden');
      }
    });

    // Close search results when clicking elsewhere
    document.addEventListener('click', function(e) {
      if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
        searchResults.classList.add('hidden');
      }
    });

    // Make addCompanionToTrip accessible globally
    window.addCompanionToTrip = function(companionId, companionName, event) {
      event.preventDefault();
      event.stopPropagation();

      const companion = { id: companionId, name: companionName };
      selectedCompanions.push(companion);

      // Add to display
      const companionEl = document.createElement('div');
      companionEl.className = 'inline-flex items-center gap-2 bg-blue-100 text-blue-900 px-3 py-2 rounded-lg text-sm mr-2 mb-2';
      companionEl.innerHTML = `
        <span>${companionName}</span>
        <button type="button" class="text-blue-900 hover:text-blue-700 font-bold ml-1 focus:outline-none" data-action="removeCompanionFromTrip" data-companion-id="${companionId}" style="font-size: 1.2em; line-height: 1;">
          ×
        </button>
      `;
      companionsContainer.appendChild(companionEl);

      // Update hidden field
      companionsJson.value = JSON.stringify(selectedCompanions.map(c => c.id));

      // Clear search
      searchInput.value = '';
      searchResults.classList.add('hidden');
    };

    window.removeCompanionFromTrip = function(companionId, button) {
      event.preventDefault();
      event.stopPropagation();

      if (companionId !== 'owner') {
        selectedCompanions = selectedCompanions.filter(c => c.id !== companionId);
      }
      button.closest('div').remove();

      // Update hidden field
      companionsJson.value = JSON.stringify(selectedCompanions.map(c => c.id));
    };
  }

  window.showCreateEventForm = function() {
    const content = document.getElementById('secondary-sidebar-content');
    if (!content) return;

    // Load the form via AJAX to use the unified form component
    fetch('/events/standalone/form')
      .then(response => response.text())
      .then(html => {
        content.innerHTML = html;

        // Execute any scripts in the loaded form
        const scripts = content.querySelectorAll('script');
        scripts.forEach(script => {
          const newScript = document.createElement('script');
          if (script.src) {
            newScript.src = script.src;
          } else {
            newScript.textContent = script.textContent;
          }
          document.head.appendChild(newScript);
        });

        // Initialize the event date sync
        if (typeof initializeEventDateSync === 'function') {
          initializeEventDateSync();
        }

        // Initialize date picker auto-close for the newly loaded form inputs
        if (typeof initializeDateTimePickerClosing === 'function') {
          initializeDateTimePickerClosing();
        }

        // Initialize time input formatting (24-hour format with validation)
        if (typeof initializeTimeInputs === 'function') {
          initializeTimeInputs();
        }

        window.openSecondarySidebar();
      })
      .catch(error => {
        console.error('Error loading event form:', error);
        content.innerHTML = '<p class="text-red-600">Error loading form</p>';
      });
  };
</script>
