          // Check flights for latest arrival
          if (trip.flights && trip.flights.length > 0) {
            trip.flights.forEach(f => {
              if (f.arrivalDateTime) {
                const arrivalDate = new Date(f.arrivalDateTime);
                if (arrivalDate > latestEndDate) latestEndDate = arrivalDate;
              }
            });
          }

          // Check hotels for latest checkout
          if (trip.hotels && trip.hotels.length > 0) {
            trip.hotels.forEach(h => {
              if (h.checkOutDateTime) {
                const checkoutDate = new Date(h.checkOutDateTime);
                if (checkoutDate > latestEndDate) latestEndDate = checkoutDate;
              }
            });
          }

          // Check transportation for latest arrival
          if (trip.transportation && trip.transportation.length > 0) {
            trip.transportation.forEach(t => {
              if (t.arrivalDateTime) {
                const arrivalDate = new Date(t.arrivalDateTime);
                if (arrivalDate > latestEndDate) latestEndDate = arrivalDate;
              }
            });
          }

          // Check car rentals for latest dropoff
          if (trip.carRentals && trip.carRentals.length > 0) {
            trip.carRentals.forEach(c => {
              if (c.dropoffDateTime) {
                const dropoffDate = new Date(c.dropoffDateTime);
                if (dropoffDate > latestEndDate) latestEndDate = dropoffDate;
              }
            });
          }

          // Check events for latest end
          if (trip.events && trip.events.length > 0) {
            trip.events.forEach(e => {
              if (e.endDateTime) {
                const endDate = new Date(e.endDateTime);
                if (endDate > latestEndDate) latestEndDate = endDate;
              }
            });
          }

          // Trip is past only if the latest end date of all segments is in the past
          if (latestEndDate < now) {
            pastTrips.push(trip);
          } else {
            upcomingTrips.push(trip);
          }
        });

        // Declare tripItems outside the if block so it's accessible later
        let tripItems = [];
