<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <main class="container mt-4">
    <%- include('../partials/flash') %>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow">
          <div class="card-body">
            <h2 class="card-title mb-4">
              <i class="bi bi-person-gear"></i> Edit Travel Companion
            </h2>

            <% if (companion.linkedAccount) { %>
              <div class="alert alert-success">
                <h6><i class="bi bi-person-check"></i> Account Linked</h6>
                <p class="mb-0">
                  This companion is linked to the account of
                  <strong><%= companion.linkedAccount.firstName %> <%= companion.linkedAccount.lastName %></strong>
                  (<%= companion.linkedAccount.email %>).
                  They can see trips you've added them to.
                </p>
              </div>
            <% } else { %>
              <div class="alert alert-warning">
                <h6><i class="bi bi-person"></i> No Account Linked</h6>
                <p class="mb-0">
                  This companion doesn't have a linked account yet.
                  If they create an account with the email <strong><%= companion.email %></strong>,
                  they'll automatically be linked.
                </p>
              </div>
            <% } %>

            <form action="/companions/<%= companion.id %>?_method=PUT" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Full Name *</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= companion.name %>" required>
                <small class="form-text text-muted">The full name of your travel companion</small>
              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email Address *</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= companion.email %>" required>
                <small class="form-text text-muted">
                  <% if (companion.linkedAccount) { %>
                    <span class="text-warning">
                      <i class="bi bi-exclamation-triangle"></i>
                      Changing the email will unlink the current account connection.
                    </span>
                  <% } else { %>
                    If they create an account with this email, they'll automatically see trips you've added them to
                  <% } %>
                </small>
              </div>

              <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="phone" value="<%= companion.phone || '' %>">
                <small class="form-text text-muted">Optional - useful for trip coordination</small>
              </div>

              <% if (companion.linkedAccount) { %>
                <div class="alert alert-light">
                  <h6><i class="bi bi-gear"></i> Account Management</h6>
                  <p>Since this companion has a linked account, they can:</p>
                  <ul>
                    <li>View trips you've added them to</li>
                    <li>Remove themselves from trips</li>
                    <li>Edit trip items (if you give them permission)</li>
                  </ul>
                  <div class="mt-3">
                    <button type="button" class="btn btn-outline-warning btn-sm" onclick="unlinkAccount()">
                      <i class="bi bi-unlink"></i> Unlink Account
                    </button>
                  </div>
                </div>
              <% } %>

              <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="/manage/companions" class="btn btn-secondary">Cancel</a>
                <button type="button" class="btn btn-outline-danger ms-auto" onclick="deleteCompanion()">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteCompanionModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Delete Travel Companion</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete <strong><%= companion.name %></strong>?</p>
            <p class="text-muted">This will remove them from all trips they are currently part of. This action cannot be undone.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Unlink Confirmation Modal -->
    <div class="modal fade" id="unlinkCompanionModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Unlink Account</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to unlink <strong><%= companion.name %></strong>'s account?</p>
            <p class="text-muted">They will no longer be able to see trips you've added them to until they are linked again.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-warning" id="confirmUnlinkBtn">Unlink</button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function deleteCompanion() {
      const modal = new bootstrap.Modal(document.getElementById('deleteCompanionModal'));
      modal.show();
    }

    function unlinkAccount() {
      const modal = new bootstrap.Modal(document.getElementById('unlinkCompanionModal'));
      modal.show();
    }

    // Handle delete confirmation
    document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
      try {
        const response = await fetch(`/companions/<%= companion.id %>`, {
          method: 'DELETE'
        });

        if (response.ok) {
          window.location.href = '/companions';
        } else {
          alert('Failed to delete companion');
        }
      } catch (error) {
        alert('Failed to delete companion');
      }
    });

    // Handle unlink confirmation
    document.getElementById('confirmUnlinkBtn').addEventListener('click', async () => {
      try {
        const response = await fetch(`/companions/<%= companion.id %>/unlink`, {
          method: 'PUT'
        });

        if (response.ok) {
          location.reload();
        } else {
          alert('Failed to unlink companion');
        }
      } catch (error) {
        alert('Failed to unlink companion');
      }
    });
  </script>
</body>
</html>