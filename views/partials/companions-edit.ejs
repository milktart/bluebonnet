<!-- Edit Travel Companion Partial for Sidebar -->
<div>
  <!-- Header with Back Arrow -->
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-2">
      <button onclick="goBackInSidebar()" class="p-1 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-md transition-colors" title="Go back">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>
      <h2 class="text-lg font-bold text-gray-900">Edit Companion</h2>
    </div>
    <button onclick="closeSecondarySidebar()" class="text-gray-400 hover:text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Account Link Status -->
  <% if (companion.linkedAccount) { %>
    <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg">
      <div class="flex items-start gap-2">
        <span class="material-symbols-outlined text-green-600 mt-0.5" style="font-size: 18px;">check_circle</span>
        <div>
          <h4 class="text-sm font-medium text-green-900">Account Linked</h4>
          <p class="text-xs text-green-700 mt-0.5">
            Linked to <%= companion.linkedAccount.firstName %> <%= companion.linkedAccount.lastName %> (<%= companion.linkedAccount.email %>)
          </p>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="mb-4 p-3 bg-amber-50 border border-amber-200 rounded-lg">
      <div class="flex items-start gap-2">
        <span class="material-symbols-outlined text-amber-600 mt-0.5" style="font-size: 18px;">person</span>
        <div>
          <h4 class="text-sm font-medium text-amber-900">No Account Linked</h4>
          <p class="text-xs text-amber-700 mt-0.5">
            If they create an account with <strong><%= companion.email %></strong>, they'll automatically be linked.
          </p>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Edit Form -->
  <form id="edit-companion-form" action="/companions/<%= companion.id %>?_method=PUT" method="POST" class="space-y-4">
    <div>
      <label for="edit-name" class="block text-sm font-medium text-gray-700 mb-1">Full Name *</label>
      <input type="text" id="edit-name" name="name" value="<%= companion.name %>" required
             class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
      <p class="text-xs text-gray-500 mt-1">The full name of your travel companion</p>
    </div>

    <div>
      <label for="edit-email" class="block text-sm font-medium text-gray-700 mb-1">Email Address *</label>
      <input type="email" id="edit-email" name="email" value="<%= companion.email %>" required
             class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
      <p class="text-xs text-gray-500 mt-1">
        <% if (companion.linkedAccount) { %>
          <span class="text-amber-600">
            <span class="material-symbols-outlined inline" style="font-size: 14px;">warning</span>
            Changing the email will unlink the current account connection.
          </span>
        <% } else { %>
          If they create an account with this email, they'll automatically see trips you've added them to
        <% } %>
      </p>
    </div>

    <div>
      <label for="edit-phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
      <input type="tel" id="edit-phone" name="phone" value="<%= companion.phone || '' %>"
             class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none">
      <p class="text-xs text-gray-500 mt-1">Optional - useful for trip coordination</p>
    </div>

    <div class="flex items-center gap-2 pt-2">
      <input type="checkbox" id="edit-canBeAddedByOthers" name="canBeAddedByOthers" <%= companion.canBeAddedByOthers ? 'checked' : '' %>
             class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
      <label for="edit-canBeAddedByOthers" class="text-sm font-medium text-gray-700">
        Allow other users to add this companion to their trips
      </label>
    </div>
    <p class="text-xs text-gray-500 ml-6">When enabled, other users can find and add this companion to their trips.</p>

    <!-- Account Management Section -->
    <% if (companion.linkedAccount) { %>
      <div class="pt-4 border-t border-gray-200">
        <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center gap-2">
          <span class="material-symbols-outlined" style="font-size: 18px;">settings</span>
          Account Management
        </h4>
        <p class="text-xs text-gray-600 mb-3">Since this companion has a linked account, they can:</p>
        <ul class="text-xs text-gray-600 space-y-1 ml-4 mb-4">
          <li class="list-disc">View trips you've added them to</li>
          <li class="list-disc">Remove themselves from trips</li>
          <li class="list-disc">Edit trip items (if you give them permission)</li>
        </ul>
        <button type="button" onclick="unlinkCompanionAccount('<%= companion.id %>')" class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-amber-600 bg-amber-50 border border-amber-200 rounded-md hover:bg-amber-100 transition-colors">
          <span class="material-symbols-outlined mr-1" style="font-size: 14px;">link_off</span>
          Unlink Account
        </button>
      </div>
    <% } %>

    <!-- Action Buttons -->
    <div class="flex gap-3 pt-4 border-t border-gray-200">
      <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors">
        <span class="material-symbols-outlined mr-2" style="font-size: 18px;">check</span>
        Update Companion
      </button>
      <button type="button" onclick="goBackInSidebar()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">
        Cancel
      </button>
      <button type="button" onclick="deleteCompanionSidebar('<%= companion.id %>')" class="ml-auto inline-flex items-center px-4 py-2 text-sm font-medium text-red-600 bg-red-50 border border-red-200 rounded-md hover:bg-red-100 transition-colors">
        <span class="material-symbols-outlined mr-2" style="font-size: 18px;">delete</span>
        Delete
      </button>
    </div>
  </form>
</div>
