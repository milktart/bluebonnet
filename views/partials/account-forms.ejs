<!-- Account Settings Forms Partial -->
<div>
  <!-- Header with Close Button -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg font-bold text-gray-900">Account Settings</h2>
    <button onclick="closeSecondarySidebar()" class="text-gray-400 hover:text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <div class="space-y-6">
    <!-- Profile Information Card -->
    <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
      <div class="flex items-center mb-6">
        <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
          <span class="material-symbols-outlined text-blue-600" style="font-size: 16px;">person</span>
        </div>
        <h3 class="text-base font-semibold text-gray-900">Profile Information</h3>
      </div>
      <form action="/account/profile?_method=PUT" method="POST" class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name *</label>
            <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="firstName" name="firstName"
                   value="<%= user.firstName %>" required>
          </div>
          <div>
            <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name *</label>
            <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="lastName" name="lastName"
                   value="<%= user.lastName %>" required>
          </div>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address *</label>
          <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="email" name="email"
                 value="<%= user.email %>" required>
        </div>
        <div class="flex gap-3 pt-2">
          <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
            <span class="material-symbols-outlined mr-2" style="font-size: 18px;">check</span>
            Update Profile
          </button>
          <button type="button" onclick="closeSecondarySidebar()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
            Cancel
          </button>
        </div>
      </form>
    </div>

    <!-- Change Password Card -->
    <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
      <div class="flex items-center mb-6">
        <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mr-3">
          <span class="material-symbols-outlined text-yellow-600" style="font-size: 16px;">key</span>
        </div>
        <h3 class="text-base font-semibold text-gray-900">Change Password</h3>
      </div>
      <form action="/account/password?_method=PUT" method="POST" class="space-y-4">
        <div>
          <label for="currentPassword" class="block text-sm font-medium text-gray-700 mb-1">Current Password *</label>
          <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="currentPassword" name="currentPassword" required>
        </div>
        <div>
          <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password *</label>
          <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="newPassword" name="newPassword"
                 required minlength="6">
          <p class="text-xs text-gray-500 mt-1">Must be at least 6 characters long</p>
        </div>
        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password *</label>
          <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" id="confirmPassword" name="confirmPassword" required>
        </div>
        <div class="flex gap-3 pt-2">
          <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-yellow-600 border border-transparent rounded-md shadow-sm hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition-colors">
            <span class="material-symbols-outlined mr-2" style="font-size: 18px;">lock</span>
            Change Password
          </button>
          <button type="button" onclick="closeSecondarySidebar()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
            Cancel
          </button>
        </div>
      </form>
    </div>

    <!-- Travel Companions Section (People who added you as a companion) -->
    <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
      <div class="flex items-center mb-6">
        <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
          <span class="material-symbols-outlined text-green-600" style="font-size: 16px;">people</span>
        </div>
        <h3 class="text-base font-semibold text-gray-900">Travel Companions</h3>
      </div>

      <% if (companionProfiles && companionProfiles.length > 0) { %>
        <div class="space-y-3 mb-4">
          <% companionProfiles.forEach(profile => { %>
            <div class="flex items-start justify-between p-3 bg-gray-50 rounded-lg border border-gray-100">
              <div class="flex-1">
                <h4 class="text-sm font-medium text-gray-900"><%= profile.name %></h4>
                <p class="text-xs text-gray-600 mt-0.5">
                  <span class="material-symbols-outlined inline" style="font-size: 14px;">person_outline</span>
                  Added by <%= profile.creator.firstName %> <%= profile.creator.lastName %>
                </p>
                <p class="text-xs text-gray-500 mt-1"><%= profile.creator.email %></p>
              </div>
              <button onclick="removeCompanionProfile('<%= profile.id %>')" class="ml-3 p-1.5 text-red-600 hover:bg-red-50 rounded-md transition-colors flex-shrink-0">
                <span class="material-symbols-outlined" style="font-size: 18px;">close</span>
              </button>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-6">
          <span class="material-symbols-outlined text-gray-400" style="font-size: 32px; display: block; margin-bottom: 8px;">groups</span>
          <p class="text-sm text-gray-500">No companions have added you yet</p>
        </div>
      <% } %>

      <p class="text-xs text-gray-600 mt-4 pt-4 border-t border-gray-200">
        When someone adds you as a travel companion, you can see trips they've included you in. Click the X to remove a companion.
      </p>
    </div>
  </div>
</div>

<script>
  // Client-side password confirmation validation
  document.getElementById('confirmPassword').addEventListener('input', function() {
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = this.value;

    if (newPassword !== confirmPassword) {
      this.setCustomValidity('Passwords do not match');
    } else {
      this.setCustomValidity('');
    }
  });

  document.getElementById('newPassword').addEventListener('input', function() {
    const confirmPassword = document.getElementById('confirmPassword');
    if (confirmPassword.value) {
      confirmPassword.dispatchEvent(new Event('input'));
    }
  });

  // Remove companion profile function
  function removeCompanionProfile(companionId) {
    if (confirm('Are you sure you want to remove this companion? You will no longer see trips they add you to.')) {
      fetch(`/account/companions/${companionId}/revoke?_method=PUT`, {
        method: 'POST',
        headers: {
          'X-Sidebar-Request': 'true'
        }
      })
      .then(response => {
        if (!response.ok && response.status !== 404 && response.status !== 500) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        if (data.success) {
          // Reload the sidebar content
          loadSidebarContent('/account/sidebar');
        } else {
          alert(data.error || 'Failed to remove companion');
        }
      })
      .catch(error => {
        console.error('Error removing companion:', error);
        alert('Error removing companion. Please try again.');
      });
    }
  }
</script>
