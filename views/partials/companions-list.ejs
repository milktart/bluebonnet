<!-- Travel Companions List Partial for Sidebar -->
<div>
  <!-- Header with Close Button -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg font-bold text-gray-900">Travel Companions</h2>
    <button data-action="closeSecondarySidebar" class="text-gray-400 hover:text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <% if (companions.length === 0) { %>
    <!-- Empty State -->
    <div class="text-center py-12 px-6">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Travel Companions Yet</h3>
      <p class="text-gray-500 mb-6">Add companions to easily include them in your trips</p>
      <a href="/companions/create" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
        <span class="material-symbols-outlined mr-2" style="font-size: 18px;">person_add</span>
        Add First Companion
      </a>
    </div>
  <% } else { %>
    <!-- Companions List -->
    <div class="space-y-3">
      <% companions.forEach(companion => { %>
        <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <h3 class="text-sm font-semibold text-gray-900"><%= companion.name %></h3>
                <% if (companion.linkedAccount) { %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800" title="Linked to account">
                    <span class="material-symbols-outlined" style="font-size: 14px;">check_circle</span>
                  </span>
                <% } else { %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800" title="Not linked">
                    <span class="material-symbols-outlined" style="font-size: 14px;">person</span>
                  </span>
                <% } %>
              </div>
              <p class="text-xs text-gray-600"><%= companion.email %></p>
              <% if (companion.phone) { %>
                <p class="text-xs text-gray-600"><%= companion.phone %></p>
              <% } %>
              <% if (companion.linkedAccount) { %>
                <p class="text-xs text-gray-500 mt-1">
                  <span class="material-symbols-outlined inline" style="font-size: 14px;">verified_user</span>
                  <%= companion.linkedAccount.firstName %> <%= companion.linkedAccount.lastName %>
                </p>
              <% } %>
            </div>
            <!-- Dropdown Menu -->
            <div class="relative">
              <button data-companion-menu-btn="<%= companion.id %>" class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-md transition-colors">
                <span class="material-symbols-outlined" style="font-size: 20px;">more_vert</span>
              </button>
              <div data-companion-menu="<%= companion.id %>" class="hidden absolute right-0 mt-1 w-44 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                <button data-companion-edit="<%= companion.id %>" class="w-full text-left flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100">
                  <span class="material-symbols-outlined mr-3" style="font-size: 18px;">edit</span>
                  Edit Companion
                </button>
                <% if (companion.linkedAccount) { %>
                  <button data-companion-unlink="<%= companion.id %>" class="w-full text-left flex items-center px-4 py-3 text-sm text-amber-600 hover:bg-amber-50 border-b border-gray-100">
                    <span class="material-symbols-outlined mr-3" style="font-size: 18px;">link_off</span>
                    Unlink Account
                  </button>
                <% } %>
                <button data-companion-delete="<%= companion.id %>" class="w-full text-left flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50">
                  <span class="material-symbols-outlined mr-3" style="font-size: 18px;">delete</span>
                  Delete
                </button>
              </div>
            </div>
          </div>

          <!-- Permission Toggle -->
          <div class="pt-3 border-t border-gray-100">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" data-companion-permission="<%= companion.id %>" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
                     <%= companion.canBeAddedByOthers ? 'checked' : '' %>>
              <span class="text-xs text-gray-600">Allow others to add to trips</span>
            </label>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Add Companion Button -->
    <div class="mt-6">
      <button data-action="loadSidebarContent" data-url="/companions/sidebar/create" class="block w-full px-4 py-2 text-center text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 transition-colors">
        <span class="material-symbols-outlined inline mr-2" style="font-size: 16px;">person_add</span>
        Add New Companion
      </button>
    </div>
  <% } %>
</div>
