<!-- Voucher Details Tertiary Sidebar -->
<div class="h-full flex flex-col">
  <% // formatDate is now available via res.locals from utils/dateFormatter.js %>

  <!-- Header with close button -->
  <div class="flex items-center justify-between mb-6 pb-6 border-b border-gray-200 gap-2">
    <h2 class="text-lg font-bold text-gray-900 truncate">Voucher Details</h2>
    <button onclick="window.history.pushState({}, '', '/manage/certificates'); closeTertiarySidebar();" class="flex items-center justify-center w-8 h-8 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors flex-shrink-0">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <!-- Scrollable Content -->
  <div class="flex-1 overflow-y-auto space-y-4">
    <!-- Main Voucher Card -->
    <div class="p-4 bg-gradient-to-br from-amber-50 to-orange-50 border border-amber-200 rounded-lg">
      <div class="flex items-start justify-between mb-3">
        <div>
          <h3 class="text-lg font-bold text-gray-900"><%= voucher.issuer %></h3>
          <p class="text-sm text-gray-600">Voucher #: <span class="font-mono font-medium"><%= voucher.voucherNumber %></span></p>
        </div>
        <%
          let statusColor, statusText;
          if (voucher.status === 'OPEN') {
            statusColor = 'bg-green-100 text-green-800';
            statusText = 'Active';
          } else if (voucher.status === 'PARTIALLY_USED') {
            statusColor = 'bg-blue-100 text-blue-800';
            statusText = 'In Use';
          } else if (voucher.status === 'USED') {
            statusColor = 'bg-gray-100 text-gray-800';
            statusText = 'Used';
          } else if (voucher.status === 'EXPIRED') {
            statusColor = 'bg-red-100 text-red-800';
            statusText = 'Expired';
          } else if (voucher.status === 'TRANSFERRED') {
            statusColor = 'bg-blue-100 text-blue-800';
            statusText = 'Transferred';
          } else if (voucher.status === 'CANCELLED') {
            statusColor = 'bg-red-100 text-red-800';
            statusText = 'Cancelled';
          }
        %>
        <span class="px-3 py-1 rounded-full text-sm font-medium <%= statusColor %>"><%= statusText %></span>
      </div>

      <!-- Value Display -->
      <% if (voucher.totalValue) { %>
        <div class="mt-4 pt-4 border-t border-amber-200">
          <p class="text-xs font-medium text-gray-600 uppercase mb-1">Balance</p>
          <div class="flex items-baseline justify-between">
            <p class="text-2xl font-bold text-amber-700"><%= voucher.currency %> <%= parseFloat(voucher.remainingBalance || 0).toFixed(2) %></p>
            <p class="text-xs text-gray-600">of <%= parseFloat(voucher.totalValue).toFixed(2) %></p>
          </div>

          <!-- Usage Bar -->
          <div class="mt-3 w-full bg-gray-200 rounded-full h-2">
            <div class="bg-amber-600 h-2 rounded-full" style="width: <%= voucher.usagePercent || 0 %>%"></div>
          </div>
          <p class="text-xs text-gray-500 mt-1 text-right"><%= voucher.usagePercent || 0 %>% used</p>
        </div>
      <% } else { %>
        <div class="mt-4 pt-4 border-t border-amber-200">
          <p class="text-sm font-semibold text-purple-700">Certificate (Non-monetary)</p>
        </div>
      <% } %>
    </div>

    <!-- Details Grid -->
    <div class="space-y-4">
      <!-- Type -->
      <div class="p-3 bg-gray-50 rounded-lg">
        <p class="text-xs font-medium text-gray-600 uppercase mb-1">Type</p>
        <p class="text-sm font-medium text-gray-900"><%= voucher.type.replace(/_/g, ' ') %></p>
      </div>

      <!-- Expiration -->
      <% if (voucher.expirationDate) { %>
        <div class="p-3 bg-gray-50 rounded-lg">
          <p class="text-xs font-medium text-gray-600 uppercase mb-1">Expiration Date</p>
          <p class="text-sm font-medium text-gray-900"><%= formatDate(voucher.expirationDate) %></p>
          <% if (voucher.daysUntilExpiration !== null && voucher.daysUntilExpiration !== undefined) { %>
            <p class="text-xs mt-1 <% if (voucher.daysUntilExpiration <= 0) { %>text-red-600 font-semibold<% } else if (voucher.daysUntilExpiration <= 30) { %>text-orange-600<% } else { %>text-green-600<% } %>">
              <% if (voucher.daysUntilExpiration <= 0) { %>Expired<% } else if (voucher.daysUntilExpiration <= 30) { %>Expires in <%= voucher.daysUntilExpiration %> days<% } else { %><%= voucher.daysUntilExpiration %> days remaining<% } %>
            </p>
          <% } %>
        </div>
      <% } %>

      <!-- Used Amount (if applicable) -->
      <% if (voucher.totalValue) { %>
        <div class="p-3 bg-gray-50 rounded-lg">
          <p class="text-xs font-medium text-gray-600 uppercase mb-1">Used Amount</p>
          <p class="text-sm font-medium text-gray-900"><%= voucher.currency %> <%= parseFloat(voucher.usedAmount || 0).toFixed(2) %></p>
        </div>
      <% } %>

      <!-- Associated Account -->
      <% if (voucher.associatedAccount) { %>
        <div class="p-3 bg-gray-50 rounded-lg">
          <p class="text-xs font-medium text-gray-600 uppercase mb-1">Associated Account</p>
          <p class="text-sm font-medium text-gray-900"><%= voucher.associatedAccount %></p>
        </div>
      <% } %>

      <!-- Status -->
      <div class="p-3 bg-gray-50 rounded-lg">
        <p class="text-xs font-medium text-gray-600 uppercase mb-1">Status</p>
        <p class="text-sm font-medium text-gray-900"><%= voucher.status.replace(/_/g, ' ') %></p>
      </div>
    </div>

    <!-- Notes -->
    <% if (voucher.notes) { %>
      <div class="p-3 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-xs font-medium text-gray-600 uppercase mb-2">Notes</p>
        <p class="text-sm text-gray-700 whitespace-pre-line"><%= voucher.notes %></p>
      </div>
    <% } %>

    <!-- Audit History -->
    <div class="space-y-2">
      <h4 class="text-sm font-medium text-gray-900">Audit History</h4>

      <div class="p-3 bg-gray-50 rounded-lg">
        <div class="flex justify-between items-center mb-2">
          <p class="text-xs font-medium text-gray-600">Created</p>
          <p class="text-xs text-gray-700"><%= formatDateTime(voucher.createdAt) %></p>
        </div>
      </div>

      <div class="p-3 bg-gray-50 rounded-lg">
        <div class="flex justify-between items-center">
          <p class="text-xs font-medium text-gray-600">Last Updated</p>
          <p class="text-xs text-gray-700"><%= formatDateTime(voucher.updatedAt) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="pt-4 border-t border-gray-200 mt-4">
    <button onclick="closeTertiarySidebar()" class="w-full px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 font-medium text-sm transition-colors">
      Close
    </button>
  </div>
</div>
