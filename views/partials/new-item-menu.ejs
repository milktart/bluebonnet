<!-- New Item Menu - Allows user to select what type of item to create -->
<div class="flex items-center justify-between mb-6">
  <h2 class="text-lg font-bold text-gray-900">Add New Item</h2>
  <button class="close-sidebar text-gray-400 hover:text-gray-600">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
    </svg>
  </button>
</div>

<div class="space-y-3">
  <!-- Add Trip Option -->
  <button onclick="window.showCreateTripForm()" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-colors bg-white text-left">
    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
      <span class="material-symbols-outlined text-blue-600" style="font-size: 20px;">flight</span>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-gray-900">Trip</h3>
      <p class="text-xs text-gray-500">Plan a complete trip with dates</p>
    </div>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Divider -->
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-200"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 text-gray-500">or add a single item</span>
    </div>
  </div>

  <!-- Add Flight Option -->
  <button data-action="loadSidebarContent" data-url="/forms/add/flight" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-colors bg-white text-left">
    <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
      <span class="material-symbols-outlined text-blue-600" style="font-size: 20px;">flight</span>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-gray-900">Flight</h3>
      <p class="text-xs text-gray-500">Add a flight booking</p>
    </div>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Add Hotel Option -->
  <button data-action="loadSidebarContent" data-url="/forms/add/hotel" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-colors bg-white text-left">
    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
      <span class="material-symbols-outlined text-green-600" style="font-size: 20px;">hotel</span>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-gray-900">Hotel</h3>
      <p class="text-xs text-gray-500">Add a hotel or accommodation</p>
    </div>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Add Transportation Option -->
  <button data-action="loadSidebarContent" data-url="/forms/add/transportation" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-colors bg-white text-left">
    <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center flex-shrink-0">
      <span class="material-symbols-outlined text-amber-600" style="font-size: 20px;">train</span>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-gray-900">Transportation</h3>
      <p class="text-xs text-gray-500">Train, bus, taxi, or other transit</p>
    </div>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Add Car Rental Option -->
  <button data-action="loadSidebarContent" data-url="/forms/add/car-rental" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-colors bg-white text-left">
    <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
      <span class="material-symbols-outlined text-gray-600" style="font-size: 20px;">directions_car</span>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-gray-900">Car Rental</h3>
      <p class="text-xs text-gray-500">Add a car rental booking</p>
    </div>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>

  <!-- Add Event Option -->
  <button data-action="loadSidebarContent" data-url="/forms/add/event" class="w-full flex items-center space-x-3 p-4 rounded-lg border border-gray-200 hover:border-gray-300 hover:bg-gray-50 transition-colors bg-white text-left">
    <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center flex-shrink-0">
      <span class="material-symbols-outlined text-red-600" style="font-size: 20px;">event</span>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-gray-900">Event</h3>
      <p class="text-xs text-gray-500">Concert, conference, or activity</p>
    </div>
    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
    </svg>
  </button>
</div>

<script>
  // Handle close button
  document.querySelector('.close-sidebar')?.addEventListener('click', function(e) {
    e.preventDefault();
    if (typeof window.closeSecondarySidebar === 'function') {
      window.closeSecondarySidebar();
    }
  });
</script>
