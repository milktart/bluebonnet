        if (!window.currentMap || !window.currentMap.segmentLayers) return null;

        // Search through all segments to find one matching this item
        // Segments store original item data
        for (const segment of window.currentMap.segmentLayers) {
          // Check if this segment's polyline data matches the item
          // We'll store itemType and itemId on segments when we know how to
          if (segment.itemType === itemType && segment.itemId === itemId) {
            return segment;
          }
        }
        return null;
      };

      // Hover handler for individual items (flights, transportation)
      // Displays a small animated dot following the travel path
      window.highlightItemOnMap = function(itemType, itemId) {
        if (!window.currentMap || !window.currentMap.segmentLayers) return;

        // Find ALL segments matching this item type and ID, then animate them
        let foundSegments = [];
        window.currentMap.segmentLayers.forEach((segment) => {
          if (segment.itemType === itemType && segment.itemId === itemId) {
            foundSegments.push(segment);
          }
        });

        if (foundSegments.length === 0) {
          return;
        }

        // Animate all matching segments (there should typically be just one)
        foundSegments.forEach(segment => {
          if (typeof window.highlightMapMarker === 'function') {
            window.highlightMapMarker(segment.itemType, segment.itemId);
          }
        });
      };

