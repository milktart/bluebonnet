<!-- Manage Travel Companions Sidebar -->
<div>
  <!-- Header with Close Button -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg font-bold text-gray-900">Manage Companions</h2>
    <button onclick="closeSecondarySidebar()" class="text-gray-400 hover:text-gray-600">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </div>

  <div class="space-y-6">
    <!-- Add Companion Button -->
    <button onclick="loadSidebarContent('/companions/sidebar/create')" class="w-full flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-sm">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Companion
    </button>

    <!-- Section 1: Mutual Companions (Accepted Relationships) -->
    <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
      <h3 class="text-sm font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Active Companions
      </h3>
      <div id="mutualCompanionsList" class="space-y-3">
        <!-- Populated by JavaScript -->
        <div class="text-gray-500 text-sm text-center py-2">Loading...</div>
      </div>
    </div>

    <!-- Section 2: Pending Requests -->
    <div class="bg-white rounded-lg border border-gray-200 p-4 shadow-sm">
      <h3 class="text-sm font-semibold text-gray-900 mb-4 flex items-center">
        <svg class="w-4 h-4 mr-2 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Pending Requests
      </h3>

      <!-- Incoming Requests -->
      <div class="mb-4">
        <h4 class="text-xs font-semibold text-gray-600 mb-2">Requests from Others</h4>
        <div id="incomingRequestsList" class="space-y-2">
          <!-- Populated by JavaScript -->
          <div class="text-gray-500 text-xs text-center py-2">No pending incoming requests</div>
        </div>
      </div>

      <!-- Outgoing Requests -->
      <div>
        <h4 class="text-xs font-semibold text-gray-600 mb-2">Requests You've Sent</h4>
        <div id="outgoingRequestsList" class="space-y-2">
          <!-- Populated by JavaScript -->
          <div class="text-gray-500 text-xs text-center py-2">No pending outgoing requests</div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal: Change Permission Level -->
<div class="modal fade" id="changePermissionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Change Permission Level</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p class="mb-3" id="permissionModalCompanionName"></p>

        <div class="mb-3">
          <label class="form-check mb-2">
            <input type="radio" class="form-check-input" name="newPermissionLevel" value="view_travel">
            <span class="form-check-label">
              <strong>View Travel</strong>
              <br>
              <small class="text-muted">They can view your trips and travel items</small>
            </span>
          </label>
        </div>

        <div class="mb-3">
          <label class="form-check">
            <input type="radio" class="form-check-input" name="newPermissionLevel" value="manage_travel">
            <span class="form-check-label">
              <strong>Manage Travel</strong>
              <br>
              <small class="text-muted">They can edit and manage your travel plans</small>
            </span>
          </label>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirmPermissionChange">Change Permission</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal: Accept Companion Request -->
<div class="modal fade" id="acceptCompanionModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Accept Companion Request</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p class="mb-3" id="acceptModalCompanionName"></p>
        <p class="text-muted small mb-4">What permission level would you like to grant?</p>

        <div class="mb-3">
          <label class="form-check mb-2">
            <input type="radio" class="form-check-input" name="acceptPermissionLevel" value="view_travel" checked>
            <span class="form-check-label">
              <strong>View Travel</strong>
              <br>
              <small class="text-muted">They can view my trips and travel items</small>
            </span>
          </label>
        </div>

        <div class="mb-3">
          <label class="form-check">
            <input type="radio" class="form-check-input" name="acceptPermissionLevel" value="manage_travel">
            <span class="form-check-label">
              <strong>Manage Travel</strong>
              <br>
              <small class="text-muted">They can edit and manage my travel plans</small>
            </span>
          </label>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Decline Request</button>
        <button type="button" class="btn btn-primary" id="confirmAcceptRequest">Accept Request</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Store current relationship ID for modal actions
let currentRelationshipId = null;

// Load all companion data immediately (not waiting for DOMContentLoaded since this is loaded via AJAX)
async function loadCompanionData() {
  try {
    // Load mutual companions
    const mutualRes = await fetch('/companion-relationships/mutual');
    const mutualData = await mutualRes.json();
    renderMutualCompanions(mutualData.companions || []);

    // Load pending requests
    const pendingRes = await fetch('/companion-relationships/pending');
    const pendingData = await pendingRes.json();
    renderPendingRequests(pendingData || {});
  } catch (error) {
    console.error('Error loading companion data:', error);
  }
}

function renderMutualCompanions(companions) {
  const container = document.getElementById('mutualCompanionsList');

  if (!companions || companions.length === 0) {
    container.innerHTML = '<div class="text-gray-500 text-sm text-center py-2">No active companions yet</div>';
    return;
  }

  container.innerHTML = companions.map(companionObj => {
    const companion = companionObj.user;
    const theirPermission = companionObj.theirPermissionLevel || 'view_travel';
    const myPermission = companionObj.myPermissionLevel || 'view_travel';
    const relationshipId = companionObj.relationshipId;

    return `
      <div class="flex justify-between items-start p-3 bg-gray-50 rounded-md">
        <div class="flex-grow">
          <p class="text-sm font-medium text-gray-900">${companion.firstName} ${companion.lastName}</p>
          <p class="text-xs text-gray-600">${companion.email}</p>
          <div class="mt-2 space-y-1 text-xs">
            <div class="text-gray-600">
              <span class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded">${theirPermission === 'manage_travel' ? 'üìù Manage' : 'üëÅÔ∏è View'}</span>
              <span class="text-gray-500">‚Üí their access</span>
            </div>
            <div class="text-gray-600">
              <span class="inline-block bg-blue-100 text-blue-800 px-2 py-1 rounded">${myPermission === 'manage_travel' ? 'üìù Manage' : 'üëÅÔ∏è View'}</span>
              <span class="text-gray-500">‚Üí your access</span>
            </div>
          </div>
        </div>
        <div class="flex gap-2 ml-2">
          <button class="px-2 py-1 text-xs bg-blue-100 text-blue-700 rounded hover:bg-blue-200" onclick="openChangePermissionModal('${relationshipId}', '${companion.firstName} ${companion.lastName}', '${myPermission}')">
            Change
          </button>
          <button class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded hover:bg-red-200" onclick="revokeCompanion('${relationshipId}')">
            Revoke
          </button>
        </div>
      </div>
    `;
  }).join('');
}

function renderPendingRequests(data) {
  // Extract incoming and outgoing from API response
  const incoming = data.incoming || [];
  const outgoing = data.outgoing || [];

  // Render incoming
  const incomingContainer = document.getElementById('incomingRequestsList');
  if (!incoming || incoming.length === 0) {
    incomingContainer.innerHTML = '<div class="text-gray-500 text-xs text-center py-2">No pending incoming requests</div>';
  } else {
    incomingContainer.innerHTML = incoming.map(rel => {
      const requester = rel.requester;
      return `
        <div class="flex justify-between items-start p-3 bg-gray-50 rounded-md">
          <div class="flex-grow">
            <p class="text-sm font-medium text-gray-900">${requester.firstName} ${requester.lastName}</p>
            <p class="text-xs text-gray-600">${requester.email}</p>
            <p class="text-xs text-gray-500 mt-1">Requested: <strong>${rel.permissionLevel === 'manage_travel' ? 'üìù Manage' : 'üëÅÔ∏è View'}</strong></p>
          </div>
          <div class="flex gap-2 ml-2">
            <button class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded hover:bg-green-200" onclick="openAcceptModal('${rel.id}', '${requester.firstName} ${requester.lastName}')">
              Accept
            </button>
            <button class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded hover:bg-red-200" onclick="declineRequest('${rel.id}')">
              Decline
            </button>
          </div>
        </div>
      `;
    }).join('');
  }

  // Render outgoing
  const outgoingContainer = document.getElementById('outgoingRequestsList');
  if (!outgoing || outgoing.length === 0) {
    outgoingContainer.innerHTML = '<div class="text-gray-500 text-xs text-center py-2">No pending outgoing requests</div>';
  } else {
    outgoingContainer.innerHTML = outgoing.map(rel => {
      const recipient = rel.recipient;
      return `
        <div class="flex justify-between items-start p-3 bg-gray-50 rounded-md">
          <div class="flex-grow">
            <p class="text-sm font-medium text-gray-900">${recipient.firstName} ${recipient.lastName}</p>
            <p class="text-xs text-gray-600">${recipient.email}</p>
            <p class="text-xs text-gray-500 mt-1">Requested: <strong>${rel.permissionLevel === 'manage_travel' ? 'üìù Manage' : 'üëÅÔ∏è View'}</strong></p>
            <span class="inline-block mt-1 px-2 py-1 text-xs bg-amber-100 text-amber-800 rounded">Pending...</span>
          </div>
          <div class="flex gap-2 ml-2">
            <button class="px-2 py-1 text-xs bg-blue-100 text-blue-700 rounded hover:bg-blue-200" onclick="resendRequest('${rel.id}')">
              Resend
            </button>
            <button class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded hover:bg-red-200" onclick="cancelRequest('${rel.id}')">
              Cancel
            </button>
          </div>
        </div>
      `;
    }).join('');
  }
}

function openChangePermissionModal(relationshipId, companionName, currentPermission) {
  currentRelationshipId = relationshipId;
  document.getElementById('permissionModalCompanionName').textContent = companionName;
  document.querySelector(`input[name="newPermissionLevel"][value="${currentPermission}"]`).checked = true;
  new bootstrap.Modal(document.getElementById('changePermissionModal')).show();
}

function openAcceptModal(relationshipId, companionName) {
  currentRelationshipId = relationshipId;
  document.getElementById('acceptModalCompanionName').textContent = companionName;
  document.querySelector('input[name="acceptPermissionLevel"][value="view_travel"]').checked = true;
  new bootstrap.Modal(document.getElementById('acceptCompanionModal')).show();
}

// Wait for DOM to be ready before attaching event listeners
setTimeout(() => {
  const confirmBtn = document.getElementById('confirmPermissionChange');
  if (confirmBtn) {
    confirmBtn.addEventListener('click', async () => {
      const newPermission = document.querySelector('input[name="newPermissionLevel"]:checked').value;

      try {
        const response = await fetch(`/companion-relationships/${currentRelationshipId}/permission`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ permissionLevel: newPermission })
        });

        if (response.ok) {
          bootstrap.Modal.getInstance(document.getElementById('changePermissionModal')).hide();
          loadCompanionData();
        } else {
          alert('Error changing permission level');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error changing permission level');
      }
    });
  }
}, 100);

setTimeout(() => {
  const acceptBtn = document.getElementById('confirmAcceptRequest');
  if (acceptBtn) {
    acceptBtn.addEventListener('click', async () => {
      const permissionLevel = document.querySelector('input[name="acceptPermissionLevel"]:checked').value;

      try {
        const response = await fetch(`/companion-relationships/${currentRelationshipId}/accept`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ permissionLevel })
        });

        if (response.ok) {
          bootstrap.Modal.getInstance(document.getElementById('acceptCompanionModal')).hide();
          loadCompanionData();
        } else {
          alert('Error accepting companion request');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error accepting companion request');
      }
    });
  }
}, 100);

async function declineRequest(relationshipId) {
  if (!confirm('Are you sure you want to decline this request?')) return;

  try {
    const response = await fetch(`/companion-relationships/${relationshipId}/decline`, { method: 'PUT' });
    if (response.ok) {
      loadCompanionData();
    } else {
      alert('Error declining request');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error declining request');
  }
}

async function cancelRequest(relationshipId) {
  if (!confirm('Are you sure you want to cancel this request?')) return;

  try {
    const response = await fetch(`/companion-relationships/${relationshipId}`, { method: 'DELETE' });
    if (response.ok) {
      loadCompanionData();
    } else {
      alert('Error cancelling request');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error cancelling request');
  }
}

async function resendRequest(relationshipId) {
  try {
    const response = await fetch(`/companion-relationships/${relationshipId}/resend`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    });

    if (response.ok) {
      alert('Request resent successfully');
      loadCompanionData();
    } else {
      alert('Error resending request');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error resending request');
  }
}

async function revokeCompanion(relationshipId) {
  if (!confirm('Are you sure you want to revoke this companion relationship?')) return;

  try {
    const response = await fetch(`/companion-relationships/${relationshipId}`, { method: 'DELETE' });
    if (response.ok) {
      loadCompanionData();
    } else {
      alert('Error revoking companion');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error revoking companion');
  }
}

// Load companion data when sidebar is opened
loadCompanionData();
</script>
