<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Core Application CSS -->
  <link rel="stylesheet" href="/css/core.css">
  <!-- Tailwind CSS -->
  <link href="https://unpkg.com/tailwindcss@^2.0/dist/tailwind.min.css" rel="stylesheet">
  <!-- Google Material Symbols -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen flex flex-col">
  <main class="flex flex-col justify-center flex-1 py-12 px-4 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <!-- 404 Icon -->
      <div class="flex justify-center mb-8">
        <div class="relative">
          <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center">
            <span class="material-symbols-outlined text-red-600" style="font-size: 56px;">error_outline</span>
          </div>
        </div>
      </div>

      <!-- Heading -->
      <h1 class="text-center text-6xl font-bold text-gray-900 mb-4">
        404
      </h1>
      <h2 class="text-center text-2xl font-bold text-gray-800 mb-2">
        Page Not Found
      </h2>
      <p class="text-center text-gray-600 text-lg mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <!-- Error Details in Development -->
      <% if (process.env.NODE_ENV === 'development') { %>
        <div class="mb-8 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <span class="material-symbols-outlined text-yellow-600">info</span>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">
                Development Mode - Debug Information
              </h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p class="mb-2"><strong>Request Path:</strong> <code class="bg-yellow-100 px-2 py-1 rounded text-xs"><%= req.originalUrl || req.url || 'N/A' %></code></p>
                <p class="mb-2"><strong>Request Method:</strong> <code class="bg-yellow-100 px-2 py-1 rounded text-xs"><%= req.method %></code></p>
                <p class="mb-2"><strong>User Agent:</strong> <code class="bg-yellow-100 px-2 py-1 rounded text-xs break-words"><%= req.get('user-agent') || 'N/A' %></code></p>
                <% if (req.user) { %>
                  <p class="mb-2"><strong>Authenticated User:</strong> <code class="bg-yellow-100 px-2 py-1 rounded text-xs"><%= req.user.email %></code></p>
                <% } else { %>
                  <p class="mb-2"><strong>Authentication:</strong> <code class="bg-yellow-100 px-2 py-1 rounded text-xs">Not authenticated</code></p>
                <% } %>
                <p><strong>Timestamp:</strong> <code class="bg-yellow-100 px-2 py-1 rounded text-xs"><%= new Date().toISOString() %></code></p>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Flash Messages -->
      <%- include('partials/flash') %>

      <!-- Action Buttons -->
      <div class="space-y-3">
        <a
          href="/"
          class="block w-full text-center rounded-md bg-blue-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors duration-200"
        >
          <span class="material-symbols-outlined align-middle mr-2" style="font-size: 18px;">home</span>
          Go to Home
        </a>
        <button
          onclick="history.back()"
          class="block w-full rounded-md border border-gray-300 bg-white px-4 py-3 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors duration-200"
        >
          <span class="material-symbols-outlined align-middle mr-2" style="font-size: 18px;">arrow_back</span>
          Go Back
        </button>
      </div>

      <!-- Helpful Links -->
      <div class="mt-8 bg-white rounded-lg shadow-sm p-6 border border-gray-200">
        <h3 class="text-sm font-semibold text-gray-900 mb-4">
          <span class="material-symbols-outlined align-middle mr-2" style="font-size: 18px;">help</span>
          Need Help?
        </h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="/" class="text-blue-600 hover:text-blue-700 hover:underline">
              View Dashboard
            </a>
          </li>
          <% if (req.user) { %>
            <li>
              <a href="/trips" class="text-blue-600 hover:text-blue-700 hover:underline">
                View My Trips
              </a>
            </li>
            <li>
              <a href="/account" class="text-blue-600 hover:text-blue-700 hover:underline">
                Account Settings
              </a>
            </li>
          <% } else { %>
            <li>
              <a href="/auth/login" class="text-blue-600 hover:text-blue-700 hover:underline">
                Sign In
              </a>
            </li>
            <li>
              <a href="/auth/register" class="text-blue-600 hover:text-blue-700 hover:underline">
                Create Account
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>

  <!-- Preline JS -->
  <script src="/js/preline.js"></script>
</body>
</html>
