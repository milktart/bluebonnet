<% if (data?.id) { %>
<!-- Travel Companions Section for Items (Only show when editing existing items) -->
<div class="form-section border-t border-gray-200 pt-4 mt-4">
  <h3 class="text-sm font-semibold text-gray-700 mb-3">
    <span class="material-symbols-outlined" style="display: inline-block; font-size: 18px; margin-right: 8px; vertical-align: middle;">group</span>Travel Companions
  </h3>
  <p class="text-xs text-gray-500 mb-3">
    Click the X on any companion to remove them from this item only (they remain on the trip).
  </p>

  <!-- Current companions -->
  <div id="itemCompanions" class="space-y-2 mb-4">
    <div class="text-center text-gray-500 text-sm py-2">Loading companions...</div>
  </div>

  <!-- Add companion section -->
  <div class="mt-4 pt-4 border-t border-gray-200">
    <label class="block text-xs font-semibold text-gray-700 mb-2">Add Additional Companion</label>
    <div class="relative">
      <input
        type="text"
        id="companionSearch"
        placeholder="Search by name or email..."
        class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
        autocomplete="off"
      >
      <div id="companionSearchResults" class="absolute top-full left-0 right-0 mt-1 bg-white border border-gray-300 rounded-md shadow-lg z-10 hidden max-h-48 overflow-y-auto">
        <!-- Search results will appear here -->
      </div>
    </div>
    <p class="text-xs text-gray-500 mt-2">
      Search for companions from your saved list to add them to this item only.
    </p>
  </div>

  <!-- Hidden field for companion IDs to submit with form -->
  <input type="hidden" name="companions" id="itemCompanionsJson" value="[]">
</div>
<% } %>
